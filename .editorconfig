# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[**.js,**.ts]
indent_style = space
indent_size = 2

# Windows files
[*.bat]
end_of_line = crlf

[*.{kt,kts}]
indent_size=4
insert_final_newline=true
max_line_length=100
